{%- # custom css %}

{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<slideshow-component
  class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
>
  {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
    <div
      class="slideshow__controls slideshow__controls__inside slideshow__controls--top slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}"
      style="position:absolute;width: 100%;height: 100%;"
      id="slideshow-controls"
    >
      <script>
        window.addEventListener('DOMContentLoaded', function() {
          var slideshowControls = document.getElementById('slideshow-controls');

          function checkSectionSize() {
            var sectionWidth = document.documentElement.clientWidth || document.body.clientWidth;
            var sectionHeight = document.documentElement.clientHeight || document.body.clientHeight;

            if (sectionWidth < sectionHeight) {
              slideshowControls.style.display = 'none';
            } else {
              slideshowControls.style.display = 'block';
            }
          }

          checkSectionSize();

          window.addEventListener('resize', checkSectionSize);
        });
      </script>
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        {% render 'icon-caret' %}
      </button>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        {% render 'icon-caret' %}
      </button>

      {%- if section.settings.auto_rotate -%}
        <button
          type="button"
          class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}"
          aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
        >
          {%- render 'icon-pause' -%}
          {%- render 'icon-play' -%}
        </button>
      {%- endif -%}
    </div>
  {%- endif -%}

  {% if section.settings.logo %}
    <a href="{{ routes.root_url }}">
      <div
        class="logo-wrapper"
        style="top: {{ section.settings.logo_top }}vh; left: {{ section.settings.logo_left }}vw;"
      >
        <img
          src="{{ section.settings.logo | img_url: 'master' }}"
          alt="Logo"
          class="logo"
          style="width: {{ section.settings.logo_size }}vw;"
        >
      </div>
    </a>
  {% endif %}
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

